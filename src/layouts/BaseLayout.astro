---
interface Props {
  title?: string;
  description?: string;
  sidebar?: 'photo' | 'default';
}

const { 
  title = "Administratiekantoor Henk Roor | Voor de kleine ondernemer",
  description = "Administratiekantoor Henk Roor verzorgt administraties voor kleine ondernemers. Tegen redelijke tarieven, want een goede boekhouder verdient zichzelf terug!",
  sidebar = 'default'
} = Astro.props;

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="nl-NL" class="no-js">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<link rel="profile" href="http://gmpg.org/xfn/11" />

<meta name='robots' content='index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1' />

<title>{title}</title>
<meta name="description" content={description} />
<link rel="canonical" href={Astro.url.href} />
<meta property="og:locale" content="nl_NL" />
<meta property="og:type" content="website" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:site_name" content="Administratiekantoor Henk Roor" />

<link rel='stylesheet' href={`${import.meta.env.BASE_URL}/wp-includes/css/dist/block-library/style.min.css`} type='text/css' media='all' />
<link rel='stylesheet' href={`${import.meta.env.BASE_URL}/wp-content/plugins/cookie-notice/css/front.min.css`} type='text/css' media='all' />
<link rel='stylesheet' href={`${import.meta.env.BASE_URL}/wp-content/plugins/widget-options/assets/css/widget-options.css`} type='text/css' media='all' />
<link rel='stylesheet' href={`${import.meta.env.BASE_URL}/wp-content/themes/wp-advocate-child/style.css`} type='text/css' media='all' />
<link rel='stylesheet' href={`${import.meta.env.BASE_URL}/wp-content/themes/wp-advocate-child/css/style.css`} type='text/css' media='all' />
<link rel='stylesheet' href={`${import.meta.env.BASE_URL}/wp-content/themes/wp-advocate-child/css/custom-layout.css`} type='text/css' media='all' />
<link rel='stylesheet' href={`${import.meta.env.BASE_URL}/wp-content/themes/wp-advocate-child/css/mobile-menu.css`} type='text/css' media='all' />

<link rel="icon" href={`${import.meta.env.BASE_URL}/wp-content/themes/wp-advocate-child/images/favicon.ico`} sizes="32x32" />

</head>

<body class="home page-template-default page page-id-10 wp-custom-logo">

<div id="page">
  <header id="branding" role="banner">
    
      <div id="inner-header-wrap">
        
        <div id="inner-header" class="clearfix">
        
            <div id="site-heading">
                <div id="site-title"><a href={`${import.meta.env.BASE_URL}/`} title="Administratiekantoor Henk Roor" rel="home">Administratiekantoor Henk Roor</a></div>
            </div>
            
            <div id="social-media" class="clearfix">
            </div><!-- .social-media -->
    </div>
      </div>
      
      <nav id="access" role="navigation">
          <div id="inner-nav">
            <h1 class="assistive-text section-heading">Main menu</h1>
            <div class="skip-link screen-reader-text"><a href={`${import.meta.env.BASE_URL}/#content`} title="Skip to content">Skip to content</a></div>
            <div class="menu">
              <label for="mobile-menu-toggle" id="menu-icon" class="mobile-menu-label">Menu</label>
              <input type="checkbox" id="mobile-menu-toggle" class="mobile-menu-toggle" />
              <ul id="menu-main" class="menu">
                <li class={`menu-item menu-item-type-post_type menu-item-object-page menu-item-home${currentPath === `${import.meta.env.BASE_URL}/` || currentPath === `${import.meta.env.BASE_URL}` ? ' current-menu-item page_item current_page_item' : ''}`}>
                  <a title="Administratiekantoor Henk Roor" href={`${import.meta.env.BASE_URL}/`} aria-current={currentPath === `${import.meta.env.BASE_URL}/` || currentPath === `${import.meta.env.BASE_URL}` ? 'page' : undefined}>Administratiekantoor Henk Roor</a>
                </li>
                <li class={`menu-item menu-item-type-post_type menu-item-object-page${currentPath.includes('/over-ons/') ? ' current-menu-item current_page_item' : ''}`}>
                  <a title="Over ons" href={`${import.meta.env.BASE_URL}/over-ons/`}>Over ons</a>
                </li>
                <li class={`menu-item menu-item-type-post_type menu-item-object-page${currentPath.includes('/financiele-administratie/') ? ' current-menu-item current_page_item' : ''}`}>
                  <a title="Financiële administratie" href={`${import.meta.env.BASE_URL}/financiele-administratie/`}>Financiële administratie</a>
                </li>
                <li class={`menu-item menu-item-type-post_type menu-item-object-page${currentPath.includes('/salarisadministratie/') ? ' current-menu-item current_page_item' : ''}`}>
                  <a title="Salarisadministratie" href={`${import.meta.env.BASE_URL}/salarisadministratie/`}>Salarisadministratie</a>
                </li>
                <li class={`menu-item menu-item-type-post_type menu-item-object-page${currentPath.includes('/startende-ondernemers/') ? ' current-menu-item current_page_item' : ''}`}>
                  <a title="Startende ondernemers" href={`${import.meta.env.BASE_URL}/startende-ondernemers/`}>Startende ondernemers</a>
                </li>
                <li class={`menu-item menu-item-type-post_type menu-item-object-page${currentPath.includes('/netwerken/') ? ' current-menu-item current_page_item' : ''}`}>
                  <a title="Netwerken" href={`${import.meta.env.BASE_URL}/netwerken/`}>Netwerken</a>
                </li>
              </ul>
            </div>
          </div>
      </nav><!-- #access -->
      
  </header><!-- #branding -->

  <div id="main">
    <div id="container">
      <div id="content" role="main">
        <slot />
      </div><!-- #content -->

      {sidebar === 'photo' ? (
        <div id="sidebar" class="widget-area" role="complementary">

          <aside id="media_image-2" class="widget-odd widget-first widget-1 widget-logo widget widget_media_image">
            <div class="wp-caption alignnone">
              <a href={`${import.meta.env.BASE_URL}/`} rel="noopener">
                <img class="image widget-logo__image" src={`${import.meta.env.BASE_URL}/wp-content/uploads/2020/05/koffer_zonderrand.jpg`} alt="Logo Henk Roor Administratiekantoor" width="187" height="89" loading="lazy" />
              </a>
              <p class="wp-caption-text">Een goede boekhouder verdient zichzelf terug.</p>
            </div>
          </aside>

          <aside id="media_image-3" class="widget-even widget-2 widget widget_media_image">
            <img width="184" height="300" src={`${import.meta.env.BASE_URL}/wp-content/uploads/2020/09/Foto-Henk-2020-184x300.jpg`} class="image wp-image-186 attachment-medium size-medium" alt="Foto van Henk Roor" style="max-width: 100%; height: auto;" loading="lazy" srcset={`${import.meta.env.BASE_URL}/wp-content/uploads/2020/09/Foto-Henk-2020-184x300.jpg 184w, ${import.meta.env.BASE_URL}/wp-content/uploads/2020/09/Foto-Henk-2020-628x1024.jpg 628w, ${import.meta.env.BASE_URL}/wp-content/uploads/2020/09/Foto-Henk-2020-768x1253.jpg 768w, ${import.meta.env.BASE_URL}/wp-content/uploads/2020/09/Foto-Henk-2020-942x1536.jpg 942w, ${import.meta.env.BASE_URL}/wp-content/uploads/2020/09/Foto-Henk-2020.jpg 963w`} sizes="(max-width: 184px) 100vw, 184px" />
          </aside>

          <aside id="custom_html-2" class="widget_text widget-odd widget-3 widget--contact widget widget_custom_html">
            <div class="widget-title">Contactinformatie</div>
            <div class="textwidget custom-html-widget">
              <p><b>Administratiekantoor Henk Roor</b></p>
              <br />
              <p><b>Adres:</b></p>
              <p>
                Achterkerkstraat 107<br />
                3901 DA Veenendaal
              </p>
              <br />
              <p><b>Telefoon:</b></p>
              <p><a href="tel:0641813767">06-41813767</a></p>
              <br />
              <p><b>E-mail:</b></p>
              <p><a href="mailto:info@henkroor.nl">info@henkroor.nl</a></p>
              <br />
              <p><b>Route:</b></p>
              <a href="https://goo.gl/maps/GTF9PMFXi2amtd9z6" rel="noreferrer noopener" target="_blank">
                <div class="picture__container">
                  <picture class="picture picture--none">
                    <source srcset={`${import.meta.env.BASE_URL}/wp-content/themes/wp-advocate-child/images/map.webp`} type="image/webp" />
                    <source srcset={`${import.meta.env.BASE_URL}/wp-content/themes/wp-advocate-child/images/map.jpg`} type="image/jpeg" />
                    <img class="picture__img" src={`${import.meta.env.BASE_URL}/wp-content/themes/wp-advocate-child/images/map.jpg`} alt="Een kaart met de locatie van Administratiekantoor Henk Roor" />
                  </picture>
                </div>
              </a>
            </div>
          </aside>

          <aside id="custom_html-3" class="widget_text widget-even widget-last widget-4 widget widget_custom_html">
            <div class="textwidget custom-html-widget">
              Website gemaakt door <a href="https://kokokoding.nl" target="_blank" title="Koko Koding" rel="noopener">Koko Koding</a>
            </div>
          </aside>

        </div>
      ) : (
        <div id="sidebar" class="widget-area col300" role="complementary">

          <aside id="media_image-2" class="widget-odd widget-first widget-1 widget-logo widget widget_media_image">
            <div class="wp-caption alignnone">
              <a href={`${import.meta.env.BASE_URL}/`} rel="noopener">
                <img class="image widget-logo__image" src={`${import.meta.env.BASE_URL}/wp-content/uploads/2020/05/koffer_zonderrand.jpg`} alt="Logo Henk Roor Administratiekantoor" width="187" height="89" loading="lazy" />
              </a>
              <p class="wp-caption-text">Een goede boekhouder verdient zichzelf terug.</p>
            </div>
          </aside>

          <aside id="custom_html-2" class="widget_text widget-even widget-2 widget--contact widget widget_custom_html">
            <div class="widget-title">Contactinformatie</div>
            <div class="textwidget custom-html-widget">
              <p><b>Administratiekantoor Henk Roor</b></p>
              <br />
              <p><b>Adres:</b></p>
              <p>
                Achterkerkstraat 107<br />
                3901 DA Veenendaal
              </p>
              <br />
              <p><b>Telefoon:</b></p>
              <p><a href="tel:0641813767">06-41813767</a></p>
              <br />
              <p><b>E-mail:</b></p>
              <p><a href="mailto:info@henkroor.nl">info@henkroor.nl</a></p>
              <br />
              <p><b>Route:</b></p>
              <a href="https://goo.gl/maps/GTF9PMFXi2amtd9z6" rel="noreferrer noopener" target="_blank">
                <div class="picture__container">
                  <picture class="picture picture--none">
                    <source srcset={`${import.meta.env.BASE_URL}/wp-content/themes/wp-advocate-child/images/map.webp`} type="image/webp" />
                    <source srcset={`${import.meta.env.BASE_URL}/wp-content/themes/wp-advocate-child/images/map.jpg`} type="image/jpeg" />
                    <img class="picture__img" src={`${import.meta.env.BASE_URL}/wp-content/themes/wp-advocate-child/images/map.jpg`} alt="Een kaart met de locatie van Administratiekantoor Henk Roor" />
                  </picture>
                </div>
              </a>
            </div>
          </aside>

          <aside id="custom_html-3" class="widget_text widget-odd widget-last widget-3 widget widget_custom_html">
            <div class="textwidget custom-html-widget">
              Website gemaakt door <a href="https://kokokoding.nl" target="_blank" title="Koko Koding" rel="noopener">Koko Koding</a>
            </div>
          </aside>

        </div>
      )}

    </div><!-- #container -->
  </div><!-- #main -->

  <footer id="colophon" role="contentinfo">
    <div id="site-generator">
        &copy; Administratiekantoor Henk Roor - Powered by <a href="http://wordpress.org/" title="Semantic Personal Publishing Platform">WordPress.</a>
         | <span>
            Website & Wordpress thema door <a style="text-decoration: none" href="https://kokokoding.nl" target="_blank" rel="noopener">Koko Koding</a>
        </span>
    </div>
  </footer><!-- #colophon -->

</div><!-- #page -->

</body>
</html>
