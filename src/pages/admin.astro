---
// This route serves the Decap CMS admin interface
// The config is served from /admin/config.yml in the public folder
---

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Content Manager</title>
    <script>
      // Configure Decap CMS
      window.CMS_CONFIG = {
        backend: {
          name: 'github',
          repo: 'drikusroor/henk-roor-static',
          branch: 'main',
          base_url: 'https://sveltia-cms-auth.drikusroor.workers.dev'
        },
        media_folder: 'public/wp-content/uploads',
        public_folder: '/henk-roor-static/wp-content/uploads',
        publish_mode: 'editorial_workflow',
        collections: [
          {
            name: 'pages',
            label: 'Pages',
            files: [
              {
                label: 'Home Page',
                name: 'index',
                file: 'src/content/pages/index.md',
                fields: [
                  { label: 'Title', name: 'title', widget: 'string' },
                  { label: 'Description', name: 'description', widget: 'string', required: false },
                  { label: 'Content', name: 'body', widget: 'markdown' }
                ]
              },
              {
                label: 'FinanciÃ«le Administratie',
                name: 'financiele-administratie',
                file: 'src/content/pages/financiele-administratie.md',
                fields: [
                  { label: 'Title', name: 'title', widget: 'string' },
                  { label: 'Description', name: 'description', widget: 'string', required: false },
                  { label: 'Body', name: 'body', widget: 'markdown' }
                ]
              },
              {
                label: 'Netwerken',
                name: 'netwerken',
                file: 'src/content/pages/netwerken.md',
                fields: [
                  { label: 'Title', name: 'title', widget: 'string' },
                  { label: 'Description', name: 'description', widget: 'string', required: false },
                  { label: 'Body', name: 'body', widget: 'markdown' }
                ]
              },
              {
                label: 'Over Ons',
                name: 'over-ons',
                file: 'src/content/pages/over-ons.md',
                fields: [
                  { label: 'Title', name: 'title', widget: 'string' },
                  { label: 'Description', name: 'description', widget: 'string', required: false },
                  { label: 'Sidebar', name: 'sidebar', widget: 'select', options: ['default', 'photo'], default: 'photo' },
                  { label: 'Body', name: 'body', widget: 'markdown' }
                ]
              },
              {
                label: 'Salarisadministratie',
                name: 'salarisadministratie',
                file: 'src/content/pages/salarisadministratie.md',
                fields: [
                  { label: 'Title', name: 'title', widget: 'string' },
                  { label: 'Description', name: 'description', widget: 'string', required: false },
                  { label: 'Body', name: 'body', widget: 'markdown' }
                ]
              },
              {
                label: 'Startende Ondernemers',
                name: 'startende-ondernemers',
                file: 'src/content/pages/startende-ondernemers.md',
                fields: [
                  { label: 'Title', name: 'title', widget: 'string' },
                  { label: 'Description', name: 'description', widget: 'string', required: false },
                  { label: 'Body', name: 'body', widget: 'markdown' }
                ]
              }
            ]
          }
        ]
      };
    </script>
  </head>
  <body>
    <!-- Include the script that builds the page and powers Decap CMS -->
    <script src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms.js"></script>
  </body>
</html>
